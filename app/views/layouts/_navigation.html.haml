= link_to "Contribot", root_path, :class => 'brand'

%ul.nav.pull-right
  - if github_authenticated?
    %li
      %p.navbar-text
        Logged in as
        = github_user.login
        = " (Admin)" if GithubUser.find_by_login(github_user.login).try(:admin?)
    %li
      = link_to "Log out", logout_path
  - else
    %li
      = link_to "Log in with GitHub", login_path
